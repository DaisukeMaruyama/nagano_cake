


<dev class="container">
  <div class="row">
    <h2 class="edit-heading col-xs-3">会員情報編集</h2>
  </div>  
  
      <table class="edit-table col-lg-7 col-s-12 col-xs mt-3 table table-borderless">

        <%= form_with model: @customer, local:true do |f| %>  
          
            <tr>
              <th><%= f.label :氏名 %></th>
              <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
              <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
            </tr>
          
          
          
            <tr>
              <th><%= f.label :フリガナ %></th>
              <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
              <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
            </tr>
        
          
         
            <tr>
              <th><%= f.label :郵便番号 %></th>
              <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
              <td></td>
            </tr>
         
          
         
            <tr>
              <th><%= f.label :住所 %></th>
              <td colspan="2"><%= f.text_field :address, autofocus: true, autocomplete: "address", style:"width:100%" %></td>
            </tr>
          
          
          
            <tr>
              <th><%= f.label :電話番号 %></th>
              <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
              <td></td>
            </tr>
          
          
        
            <tr>
              <th><%= f.label :メールアドレス %></th>
              <td><%= f.text_field :email, autofocus: true, autocomplete: "email" %></td>
              <td></td>
            </tr>
         
      
          
          
            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存",class: "btn btn-success"  %></td>
              <td><%= link_to '退会する', root_path, class: "btn btn-danger" %></td>
             <% end %>
            </tr>
          
      </table>  
  </div>
</dev>






          
