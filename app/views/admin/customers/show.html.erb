<div class="container">
  <h4 class="headline mt-5 mb-3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
  
  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>会員ID</strong></label>
    <div class="col-sm-10">
      <%= @customer.id %>
    </div>
  </div>
  
  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>氏名</strong></label>
    <div class="col-sm-10">
      <%= @customer.last_name %>　<%= @customer.first_name %>
    </div>
  </div>
  
  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>フリガナ</strong></label>
    <div class="col-sm-10">
      <%= @customer.last_name_kana %>　<%= @customer.first_name_kana %>
    </div>
  </div>
  
  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>郵便番号</strong></label>
    <div class="col-sm-10">
       〒 <%= @customer.postal_code %>
    </div>
  </div>
  
  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>住所</strong></label>
    <div class="col-sm-10">
      <%= @customer.address %>
    </div>
  </div>
  
  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>電話番号</strong></label>
    <div class="col-sm-10">
      <%= @customer.phone_number %>
    </div>
  </div>
  
  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>メールアドレス</strong></label>
    <div class="col-sm-10">
      <%= @customer.email %>
    </div>
  </div>
  
  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>会員ステータス</strong></label>
    <div class="col-sm-10">
      <% if @customer.is_deleted == "Nondeleted" %>
        <span style="color:#49C918;">有効</sapn>
      <% else %>
        <span style="color:#C0C2BF;">退会</sapn>
      <% end %>
    </div>
  </div>
  
  <div class="form-group row mt-2">
    <label class="col-sm-2"></label>
    <div class="col-sm-2 mt-2">
      <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
    </div>
    <div class="col-sm-6 mt-2">
      <%= link_to "注文履歴一覧を見る", edit_admin_customer_path, class:"btn btn-primary" %>
    </div>
  </div>
  
</div>
