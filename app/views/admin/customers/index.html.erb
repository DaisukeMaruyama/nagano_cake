<!--  レイアウト的にはadmin/items/indexと同じのため、流用 文字は会員一覧用に変更 -->
<div class="container">
 	<div class="admin-items">
		<div class = "mt-3 mb-3 ml-3 headline">会員一覧</div>

	</div>
	<div class="row">
	<table class="table table-hover">
		<thead class="active">
				<tr>
					<th>会員ID</th>
					<th>名前</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
		</thead>
		<tbody>
					<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td>
						<%= link_to admin_customer_path(customer.id) do %>
						<span><%= customer.last_name %><%= customer.first_name %></span>
						<% end %>
					</td>
					<td><%= customer.email %></td>
					<td>
						<% if customer.is_deleted == "Nondeleted" %>
              <span style="color:#49C918;">有効</sapn>
            <% else %>
              <span style="color:#C0C2BF;">退会</sapn>
            <% end %>
					</td>
				</tr>
		</tbody>
		<% end %>
	</table>
	</div>
	<%= paginate @customers %>
</div>
