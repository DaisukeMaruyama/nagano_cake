<div class="container">
  <h4 class="headline mt-5 mb-3"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>

  <%= form_with model: @customer, url: admin_customer_path, method: :patch, local:true do |f| %>
  
  <% if @customer.errors.any? %>
      <div class="error-explanation">
        <h3><%= @customer.errors.count %>件のエラーが発生しております。</h3>
        <% @customer.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
        <% end %>
      </div>
  <% end %>
  
  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>会員ID</strong></label>
    <div class="col-sm-10">
      <%= @customer.id %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>氏名</strong></label>
    <div class="col-sm-10">
      <%= f.text_field :last_name %>　<%= f.text_field :first_name %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>フリガナ</strong></label>
    <div class="col-sm-10">
      <%= f.text_field :last_name_kana %>　<%= f.text_field :first_name_kana %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>郵便番号</strong></label>
    <div class="col-sm-10">
       <%= f.text_field :postal_code %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>住所</strong></label>
    <div class="col-sm-10">
      <%= f.text_field :address, size:"50" %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>電話番号</strong></label>
    <div class="col-sm-10">
      <%= f.text_field :phone_number %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>メールアドレス</strong></label>
    <div class="col-sm-10">
      <%= f.text_field :email %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <label class="col-sm-2"><strong>会員ステータス</strong></label>
    <div class="col-sm-10">
    　<%= f.radio_button :is_deleted, "Nondeleted" %>
    　<%= f.label :is_deleted, "有効" %>
    　<%= f.radio_button :is_deleted, "Deleted" %>
    　<%= f.label :is_deleted, "退会" %>
    </div>
  </div>

  <div class="form-group row mt-2">
    <label class="col-sm-2"></label>
    <div class="col-sm-2 mt-2">
      <%= f.submit "変更を保存", class:"btn btn-success" %>
    </div>
  </div>
  <% end %>

</div>
