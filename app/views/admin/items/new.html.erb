  <div class="container">

		<div class="form"></div>
      <div class="text-left mb-4">
        <h1 class="h3 mb-3 font-weight-normal">製品登録</h1>

				<div class="mx-auto">
				<%= form_with model: @item,local: true do |f| %>

         <% if @item.errors.any? %>
          <div class="error-explanation">
            <h3><%= @item.errors.count %> errors prohibited this book from being saved</h3>
            <% @item.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            </ul>
            <% end %>
          </div>
        <% end %>


          <div class="field">
            <%= f.label :製品名 %><br />
            <%= f.text_field :item_name, class: "form" %>
          </div>
          <div class="field">
            <%= f.label :製品ジャンル %><br />
            <%= f.collection_select :genre_id, Genre.all, :id, :item_name, include_blank: "--選択してください--" %>
          </div>
          <div class="field">
            <%= f.label :価格 %><br />
            <%= f.text_field :price, class: "form" %>
          </div>
          <div class="field">
            <%= f.label :製品写真 %><br />
            <%= f.attachment_field :image %>
          </div>
          <div class="field">
            <%= f.label :製品紹介 %><br />
            <%= f.text_area :introduction, class: "text-form" %>
          </div>
          <div class="field">
            <%= f.label :販売ステータス %><br />
            <%= f.select :is_active, [["販売中",true],["販売停止中",false]], include_blank: "--選択してください--" %>
          </div>
          <div class="action">
            <%= f.submit "製品を追加", class: "btn btn-secondary mt-3" %>
          </div>
      <% end %>
				</div>


			</div>
		</div>
	</div>


<div class="container">
  <div class="row">
    <h3 class="mt-5 ml-5 col-12">製品登録</h3>
    <div class="mx-auto">
      <table class="table table-sm table-borderless">
        <%= form_with model: @item,local: true do |f| %>
        <tr>
          <td scope="col">商品画像</td>
          <td scope="col"><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :item_name, class: "form" %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction, class: "text-form" %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :item_name, include_blank: "--選択してください--" %></td>
        </tr>
         <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, class: "form" %></td>
        </tr>
         <tr>
          <td>販売ステータス</td>
          <td><%= f.select :is_active, [["販売中",true],["販売停止中",false]], include_blank: "--選択してください--" %></td>
        </tr>
      </table>
       <div class="action">
            <%= f.submit "製品を追加", class: "btn btn-secondary mt-3 text-center" %>
          </div>
        <% end %>
    </div>
  </div>
</div>
