<div class="container">
  <div class="row">

    <div class="mx-auto">
      <h3 class="mt-3 mb-3 col-4">製品編集</h3>
      <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch , local: true do |f| %>
      
      <% if @item.errors.any? %>
      <div class="error-explanation">
        <h3><%= @item.errors.count %>件のエラーが発生しております。</h3>
        <% @item.errors.full_messages.each do |message| %>
          <ul>
            <li><%= message %></li>
          </ul>
        <% end %>
      </div>
      <% end %>
      
      <table class="table table-sm table-borderless">
        <tr>
          <td scope="col">商品画像</td>
          <td scope="col"><%= f.attachment_field :image %></td>
        </tr>
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :item_name, class: "item-edit-txt" %></td>
        </tr>
        <tr>
          <td>商品説明</td>
          <td><%= f.text_area :introduction, class: "item-edit-explination" %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :genre_name, include_blank: "--選択してください--" %></td>
        </tr>
         <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price, class: "item-edit-txt" %></td>
        </tr>
         <tr>
          <td>販売ステータス</td>
          <td><%= f.radio_button :is_active, "販売中" %>
              <%= f.label :is_active, "販売中"%>
              <%= f.radio_button :is_active, "販売停止中" %>
              <%= f.label :is_active, "販売停止中" %>
          </td>

        </tr>
      </table>
        <div class="text-center mb-5">
            <%= f.submit "編集を保存", class: "btn btn-success mt-2" %>
        </div>
        <% end %>
    </div>
  </div>
</div>