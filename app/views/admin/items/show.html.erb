<div class="container">
	<h3 class="mt-4 mb-5">製品詳細</h3>

    <div class="row">

        <div class="col-xs-3 col-xs-offset-1">
            <%= attachment_image_tag(@item, :image, :fill, 250, 250, fallback:"no_image.jpg",size: '250x250') %>
        </div>
        <div class="col-xs-5 col-md-6 col-xs-offset-1">
          <table class="table table-sm table-borderless" style="border-collapse: separate; border-spacing: 5px;">
            <tr>
              <td scope="col">商品名</td>
              <td scope="col"><%= @item.item_name %></td>
            </tr>
            <tr>
              <td>紹介説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre_id %></td>
            </tr>
            <tr>
              <td>税込価格<br>(税抜価格)</td>
              <td><%= @item.price_with_tax.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
            </tr>
             <tr>
              <td style="width: 40%;">販売ステータス</td>
              <td>
                <% if @item.is_active %>
                  <span style="color:#49C918;"><%= @item.is_active %></sapn>
                <% else %>
                  <span style="color:##CCCFCB;"><%= @item.is_active %></sapn>
                <% end %>
                </td>
            </tr>
          </table>
        </div>
    </div>
    <div class="actions text-center mr-5 mb-5">
      <%= link_to '編集する', edit_admin_item_path(@item.id), class:"btn btn-success px-5 py-2" %>
    </div>
</div>
