<div class="container">
 	<div class="admin-items">
		<div class = "mt-3 mb-3 ml-3 headline">商品一覧</div>
			<%= link_to new_admin_item_path ,style:"font-size: 20px; color: grey; float: right; margin-top: 15px;" do %>
				<p class="btn btn-success"><i class="fas fa-plus-circle"></i>製品を新規追加</p>
			<% end %>
	</div>
	<div class="row">
	<table class="table table-hover">
		<thead  class="active">
				<tr>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>販売ステータス</th>
					<th></th>
				</tr>
		</thead>
		<tbody>
					<% @items.each do |item| %>
				<tr>
					<td><%= item.id %></td>
					<td>
						<%= link_to admin_item_path(item.id) do %>
						<%= item.item_name %>
						<% end %>
					</td>
					<td><%= item.price %></td>
					<td><%= item.genre.genre_name %></td>
					<td>
						<% if item.is_active == "販売中"%>
			              <span style="color:#49C918;"><%= item.is_active %></sapn>
			            <% else %>
			              <span style="color:#C0C2BF;"><%= item.is_active %></sapn>
			            <% end %>
					</td>
					<td><%= link_to "削除", admin_item_path(item.id), method: :delete, data:{confirm:"本当に削除しますか？"}, class:"text-danger" %></td>
				</tr>
		</tbody>
		<% end %>
	</table>
	</div>
	<%= paginate @items %>
</div>

