<div class="container">
  
  <div class = "mt-3 mb-3 ml-3 headline">商品一覧</div>
      
  <table class="table table-hover">
    <thead class="active">
      <tr>
        <th>購⼊⽇時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at %></td>
        <td><%= order.name %></td>
        <td>
          <% order.order_details.each do |order_detail| %>
          <%= order_detail.amount %>
          <% end %>
          </td>
        <td><%= order.order_status %></td>
      </tr>
    </tbody>
    <% end %>
    
  </table>

  
</div>