<div class="container">
  <div class="row">
    <div class="col-6" style="margin-top: 20px;">
      <h2 class="my-page-title">マイページ</h2>

      <div class="mypage-flex-group mypage-register-info-header mt-4">
          <span>登録情報</span>
          <%= link_to '編集する',edit_customer_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>
  
      <table class="table table-bordered mypage-register-info-table col-xs-12">
        <tr>
          <th class="active">氏名</th>
          <td><%= @customer.last_name + "　" + @customer.first_name %></td>
        </tr>
        <tr>
          <th class="active">カナ</th>
          <td><%= @customer.last_name_kana + "　" + @customer.first_name_kana %></td>
          </tr>
          <tr>
        <th class="active">郵便番号</th>
          <td><%= '〒' + @customer.postal_code %></td>
          </tr>
          <tr>
        <th class="active">住所</th>
          <td><%= @customer.address %></td>
          </tr>
          <tr>
        <th class="active">電話番号</th>
          <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
        <th class="active">メールアドレス</th>
          <td><%= @customer.email %></td>
          </tr>
      </table>

      <div class="mypage-flex-group">
        <span>配送先</span>
        <%= link_to '一覧を見る', root_path, class: "btn btn-primary" %>
      </div>
      <div class="mypage-flex-group">
        <span>注文履歴</span>
        <td><%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %></td>
      </div>
    </div>
  </div>
</div>

<style>
  .active {
    width: 30%;
  }
  
  .table {
    width: 60%;
  }
  
</style>