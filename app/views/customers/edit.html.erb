

<div class="container">
  <div class="row">
   <div class="edit-heading col-7">
     <h2>登録情報編集</h2>
   </div>
  </div>
  <div class="row">
   <%= form_with model: @customer, url: customer_path, local:true do |f| %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th class="col-xs-2">氏名</th>
            <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></td>
            <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></td>
          </tr>
          <tr>
            <th class="col-xs-2">カナ</td>
            <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %></td>
            <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></td>
          </tr>
          <tr>
            <th class="col-xs-2">郵便番号</td>
            <td><%= f.text_field :postal_code, autofocus: true %></td>
          </tr>
          <tr>
            <th class="col-xs-2">住所</td>
            <td colspan="2"><%= f.text_field :address, autofocus: true, style:"width:100%;" %></td>
          </tr>
          <tr>
            <th class="col-xs-2">電話番号</td>
            <td><%= f.text_field :phone_number, autofocus: true %></td>
          </tr>
          <tr>
            <th class="col-xs-2">メールアドレス</td>
            <td><%= f.text_field :email, autofocus: true %></td>
          </tr>
          <div class="action">
            <tr>
              <td></td>
              <td><%= f.submit '編集内容を保存する', class: "btn btn-primary"%></td>
              <td class="text-right"><%= link_to '退会する', root_path, class: "btn btn-danger" %></td>
            </tr>
          </div>
        </tbody>
      </table>
    <% end %> 
  </div>
</div>
</div>