<div class="container">
  <h2 class="ml-3 mt-4">注⽂履歴⼀覧</h2>
  
  <table class="table table-sm table-bordered">
    <thead>
      <tr style="background-color: #F0EDEC;">
        <th scope="col">注文日</th>
        <th scope="col">配送先</th>
        <th scope="col">注文商品</th>
        <th scope="col">支払い金額</th>
        <th scope="col">ステータス</th>
        <th scope="col">注文詳細</th>
      </tr>
    </thead>
    
    <% current_customer.orders.each do |order| %>
    <tbody>
      <tr>
        <td><%= order.created_at.strftime("%Y年%m月%d日").to_s  %></td>
        <td>〒<%= order.postal_code %><br>
        <%= order.address %><br>
        <%= order.name %></td>
        <td>
        <% order.order_details.each do |order_detail| %>
          <%= order_detail.item.item_name %><br>
          <% end %>
          </td>
        <td><%= order.total_payment.to_s(:delimited) %>円</td>
        <td><%= order.order_status %></td>
        <td><%= link_to '詳細',order_path(order.id), class:"btn btn-success" %></td>
      </tr>
    </tbody>
    <% end %>
    
    
  </table>
  
</div>
