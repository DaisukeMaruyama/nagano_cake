<div class="container-fluid">
  <h2 class="mt-3 mb-3" style="margin: 50px;">注文履歴詳細</h2>
  <div class="row">
    
    <div class="col-md-5 col-lg-6 mx-5">
      <label class="ml-1">注文商品</label>
      <table class="table table-sm table-bordered">
        <tr>
          <th class="active" scope="col">注文日</td>
          <td scope="col"><%= @order.created_at.strftime("%Y年%m月%d日").to_s %></td>
        </tr>
        <tr>
          <th class="active">配送先</th>
          <td>〒<%= @order.address %></td>
        </tr>
        <tr>
          <th class="active">支払い方法</th>
          <td><%= @order.payment_method %></td>
        </tr>
        <tr>
          <th class="active">ステータス</th>
          <td><%= @order.order_status %></td>
        </tr>
      </table>
    </div>
    
    
    <div class="col-md-4 col-xs-3 col-lg-3 mx-5">
      <label class="ml-1">請求情報</label>
      <table class="table table-sm table-bordered">
        <tr>
          <th class="active" scope="col">商品合計</td>
          <td scope="col"><%= @payment_without_shipping.to_s(:delimited)  %>円</td>
        </tr>
        <tr>
          <th class="active">配送料</th>
          <td><%= @shipping_cost.to_s(:delimited)  %>円</td>
        </tr>
        <tr>
          <th class="active"><strong>ご請求額</strong></th>
          <td><%= @payment_with_shipping.to_s(:delimited)  %>円</td>
        </tr>
      </table>
    </div>
    
    <div class="col-md-7 col-lg-7 mx-5">
      <label class="ml-1">注文内容</label>
      <table class="table table-sm table-bordered">
        <tr>
          <th scope="col" class="active">商品</th>
          <th scope="col" class="active">単価（税込）</th>
          <th scope="col" class="active">個数</th>
          <th scope="col" class="active">小計</th>
        </tr>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.item_name %></td>
            <td><%= order_detail.item.price_with_tax.to_s(:delimited)  %>円</td>
            <td><%= order_detail.amount %>個</td>
            <td><%= order_detail.subtotal_price.to_s(:delimited)  %>円</td><!-- orderモデルに記載-->
          </tr>
        <% end %>
      </table>
    </div>  
    
    
  </div>
</div>


  